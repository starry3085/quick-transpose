{
  "name": "quick-transpose",
  "version": "1.0.0",
  "description": "Cross-platform music chord transposition tool",
  "main": "index.js",
  "scripts": {
    "docs:generate": "node scripts/generate-docs.js",
    "docs:watch": "node scripts/docs-watcher.js",
    "docs:serve": "cd docs && python -m http.server 8080 || cd docs && python3 -m http.server 8080",
    "build:all": "npm run build:shared && npm run build:desktop && npm run build:web",
    "build:shared": "cd shared && npm run build",
    "build:desktop": "cd src && npm run build",
    "build:web": "cd web && npm run build",
    "test:all": "npm run test:shared && npm run test:desktop && npm run test:web",
    "test:shared": "cd shared && npm test",
    "test:desktop": "cd src && npm test",
    "test:web": "cd web && npm test",
    "dev:desktop": "cd src && npm run dev",
    "dev:web": "cd web && npm run dev",
    "install:all": "npm install && cd shared && npm install && cd ../src && npm install && cd ../web && npm install",
    "clean": "rm -rf node_modules shared/node_modules src/node_modules web/node_modules",
    "postinstall": "npm run docs:generate"
  },
  "keywords": [
    "music",
    "chord",
    "transpose",
    "cross-platform",
    "electron",
    "react",
    "miniprogram"
  ],
  "author": "Quick Transpose Team",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}