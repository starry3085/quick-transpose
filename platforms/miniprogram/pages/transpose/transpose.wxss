/* pages/transpose/transpose.wxss */

.transpose-page {
  background: #f5f5f5;
}

/* 输入区域特定样式 */
.key-input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.swap-button {
  flex-shrink: 0;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #1976d2;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.swap-button:active {
  background: #1565c0;
}

/* 开关样式优化 */
.switch-group {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.switch-label {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

/* 结果展示优化 */
.result-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.chord-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.roman-numeral {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

/* 折叠面板样式 */
.collapse-panel {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.collapse-header {
  padding: 24rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.collapse-header:active {
  background: #e9ecef;
}

.collapse-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.collapse-arrow {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.collapse-arrow.expanded {
  transform: rotate(180deg);
}

.collapse-content {
  padding: 24rpx;
  background: white;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式调整 */
@media (max-width: 500rpx) {
  .key-input-group {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .swap-button {
    transform: rotate(90deg);
  }
}