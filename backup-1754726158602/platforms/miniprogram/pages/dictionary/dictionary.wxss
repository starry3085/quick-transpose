/* pages/dictionary/dictionary.wxss */

.dictionary-page {
  background: #f5f5f5;
}

/* 和弦列表样式 */
.chord-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chord-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.chord-row:last-child {
  border-bottom: none;
}

.chord-info {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 24rpx;
}

.degree-badge {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #1976d2;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.degree-number {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.chord-details {
  flex: 1;
}

.chord-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.chord-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.roman {
  font-size: 24rpx;
  color: #1976d2;
  font-weight: 500;
}

.separator {
  color: #ccc;
  font-size: 20rpx;
}

.degree-name {
  font-size: 24rpx;
  color: #666;
}

/* 和弦类型说明 */
.chord-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.type-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.type-row:last-child {
  border-bottom: none;
}

.type-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.type-examples {
  font-size: 24rpx;
  color: #666;
  font-family: 'Courier New', monospace;
}

/* 快捷操作网格 */
.quick-actions-grid {
  gap: 20rpx;
}

.quick-actions-grid .adaptive-button {
  flex: 1;
  min-width: calc(50% - 10rpx);
}

/* 响应式调整 */
@media (max-width: 500rpx) {
  .chord-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .chord-info {
    width: 100%;
  }
  
  .quick-actions-grid .adaptive-button {
    min-width: 100%;
  }
}

/* 动画效果 */
.chord-row {
  transition: background-color 0.3s ease;
}

.chord-row:active {
  background-color: rgba(25, 118, 210, 0.05);
}

.degree-badge {
  transition: transform 0.2s ease;
}

.chord-row:active .degree-badge {
  transform: scale(1.1);
}