/* pages/transpose/transpose.wxss */

.progression-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.result-chords {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.chord-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.comparison-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.comparison-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.original {
  color: #6b7280;
  font-size: 28rpx;
}

.arrow {
  color: #10b981;
  font-weight: bold;
}

.target {
  color: #1f2937;
  font-weight: 600;
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .result-chords {
    gap: 15rpx;
  }
  
  .chord-item {
    min-width: 80rpx;
  }
}