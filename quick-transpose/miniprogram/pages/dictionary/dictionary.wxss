/* pages/dictionary/dictionary.wxss */

.switch-col {
  display: flex;
  align-items: flex-end;
  padding-bottom: 20rpx;
}

.chord-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.chord-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.chord-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.degree-badge {
  width: 60rpx;
  height: 60rpx;
  background: #10b981;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
}

.chord-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.chord-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.chord-meta {
  font-size: 24rpx;
  color: #6b7280;
}

.fill-btn {
  padding: 15rpx 25rpx;
  background: #10b981;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin: 0;
}

.fill-btn:active {
  background: #059669;
}

.legend-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.legend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.legend-item:last-child {
  border-bottom: none;
}

.legend-label {
  font-size: 28rpx;
  color: #374151;
}

.legend-example {
  font-size: 28rpx;
  color: #6b7280;
  font-family: monospace;
}

.quick-fill-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .chord-row {
    padding: 15rpx;
  }
  
  .degree-badge {
    width: 50rpx;
    height: 50rpx;
    font-size: 22rpx;
  }
  
  .chord-name {
    font-size: 28rpx;
  }
}