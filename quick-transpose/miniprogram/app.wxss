/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 全局容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.card-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.card-content {
  padding: 30rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #10b981;
  outline: none;
}

/* 选择器样式 */
.picker {
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background: #ffffff;
  color: #374151;
}

/* 按钮样式 */
.btn {
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  margin: 0;
}

.btn-primary {
  background: #10b981;
  color: #ffffff;
}

.btn-outline {
  background: transparent;
  color: #10b981;
  border: 2rpx solid #10b981;
}

.btn-small {
  padding: 15rpx 20rpx;
  font-size: 24rpx;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 10rpx 16rpx;
  background: #10b981;
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.badge-outline {
  background: transparent;
  color: #10b981;
  border: 2rpx solid #10b981;
}

/* 开关样式 */
.switch-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #374151;
}

/* 网格布局 */
.row {
  display: flex;
  gap: 20rpx;
}

.col {
  flex: 1;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-gray {
  color: #6b7280;
}

.text-small {
  font-size: 24rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}