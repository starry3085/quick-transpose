/**app.wxss**/
/* 全局公共样式 */

/* 容器样式 */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.card-content {
  padding: 30rpx;
}

/* 表单样式 */
.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 20rpx 25rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #10b981;
  outline: none;
}

.picker {
  padding: 20rpx 25rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background: #ffffff;
  font-size: 28rpx;
  color: #1f2937;
}

/* 布局样式 */
.row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.col {
  flex: 1;
}

/* 开关样式 */
.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

/* 按钮样式 */
.btn {
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-primary {
  background: #10b981;
  color: white;
}

.btn-primary:hover {
  background: #059669;
}

.btn-outline {
  background: transparent;
  color: #10b981;
  border: 2rpx solid #10b981;
}

.btn-outline:hover {
  background: #10b981;
  color: white;
}

.btn-small {
  padding: 15rpx 25rpx;
  font-size: 26rpx;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 12rpx 20rpx;
  background: #10b981;
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  min-width: 60rpx;
}

/* 文本样式 */
.text-small {
  font-size: 24rpx;
}

.text-gray {
  color: #6b7280;
}

.text-center {
  text-align: center;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  .card-header,
  .card-content {
    padding: 20rpx;
  }
  
  .row {
    gap: 15rpx;
  }
}